@model IEnumerable<DriverInformation.ViewModel.DriverInfoModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Active Driver Details</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>

</head>
<body>
    <div class="container">
        <p>@Html.ActionLink("Add New Driver", "Create")</p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DriverId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DriverName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hobby)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Available)
                        @Html.ActionLink("Show All", "ShowAll", null, new { @class = " btn btn-secondary " })
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DriverId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DriverName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hobby)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Available)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.DriverId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.DriverId })
                        </td>

                    </tr>
                }
            </table>
        </div>
        <footer>
            @*<p>
                Author: Sushil Rai <br>
                <a href="mailto:sushil01.sr@gmail.com">sushil01.sr@gmail.com</a>
            </p>*@
            <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
                © 2023 Copyright: Sushil Rai
                <p>
                    Mail to:
                    <a class="text-reset fw-bold" href="mailto:sushil01.sr@gmail.com">sushil01.sr@gmail.com</a>
                </p>
            </div>
        </footer>
    </div>
    <br />
    <hr />
</body>
</html>
